{% extends 'base.html.twig' %}

{% block title %}
Lists index
{% endblock %}

{% block body %}
<h1>Lists index</h1>

<div class="row">

    {% for list in lists %}
    <div class="col-4">
        <img width="300px" src="{{ asset('uploads/pics/' ~ list.imageName) }}" />
        <p>
            <span>{{ list.name }}</span>
        </p>
        <div class="btns">
            <a class="btn btn-primary" href="{{ path('app_lists_show', { id: list.id }) }}">Show</a>
            <a class="btn btn-success" href="{{ path('app_lists_edit', { id: list.id }) }}">Edit</a>
        </div>
    </div>
    {% else %}
    <p>No records found</p>

    {% endfor %}

</div>

<a class="btn btn-secondary w-25" href="{{ path('app_lists_new') }}">Create new</a>

{% endblock %}